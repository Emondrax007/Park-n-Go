#:kivy 1.0
<MainScreen>:
    name: "mainscreen"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                app.root.transition.direction="right"
                app.root.current = "login"
        MDLabel:
            text:"M A I N S C R E E N"
            font_name: "MPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": .6, "center_y": .85}
            color:rgba(0, 0, 59, 255)
        MDLabel:
            text:"Enter details to add record"
            font_name: "MPoppins"
            font_size: "20sp"
            pos_hint: {"center_x":.6, "center_y": .79}
            color:rgba(135, 133, 193, 255)
        
        Button:
            text: "Save Data"
            size_hint: .66, .065
            pos_hint:{"center_x": .5,"center_y": .09}
            background_color:0, 0, 0, 0
            on_release:
                #Function to save data to database
                app.saveTodb()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius:[5]