#:kivy 1.0
<MainScreen>:
    name:"mainscreen"
    MDFloatLayout:
        md_bg_color:1,1,1,1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(52, 0, 231, 255)
            on_release:
                app.root.transition.direction="right"
                app.root.current = "login"
        MDLabel:
            text:"ADMIN Portal"
            font_name: "MPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": .6, "center_y": .85}
            color:rgba(0, 0, 59, 255)
        MDLabel:
            text:"Fill up details to save data"
            font_name: "MPoppins"
            font_size: "20sp"
            pos_hint: {"center_x":.6, "center_y": .79}
            color:rgba(135, 133, 193, 255)

        MDRelativeLayout:
            size_hint_x: None
            width: "300dp"
            size_hint: 1.02, .07
            pos_hint: {"center_x": .5, "center_y": .63}
            size_hint_y: None
            height: text1.height

            MDTextField:
                id: text1
                hint_text: "Enter registration number"
                pos_hint: {"center_x": .5, "center_y": .67}
                size_hint_x: .78
                min_text_length: 5
                icon_left: "account"

        MDRelativeLayout:
            size_hint_x: None
            width: "300dp"
            size_hint: 1.02, .07
            pos_hint: {"center_x": .5, "center_y": .54}
            size_hint_y: None
            height: text1.height

            MDTextField:
                id: text1
                hint_text: "Enter name"
                pos_hint: {"center_x": .5, "center_y": .54}
                size_hint_x: .78
                min_text_length: 5
                icon_left: "account"

        MDRelativeLayout:
            size_hint_x: None
            width: "300dp"
            size_hint: 1.02, .07
            pos_hint: {"center_x": .5, "center_y": .44}
            size_hint_y: None
            height: text1.height

            MDTextField:
                id: text1
                hint_text: "Enter Phone number"
                pos_hint: {"center_x": .5, "center_y": .44}
                size_hint_x: .78
                min_text_length: 5
                icon_left: "account"

        MDFloatLayout:
            MDLabel:
                text:"Select Car Model : "
                font_name: "MPoppins"
                font_size: "18sp"
                pos_hint: {"center_x": .6, "center_y": .35}
                color:rgba(160,179,191, 255)


        MDFloatLayout:
            MDLabel:
                text:"Select time of entry : "
                font_name: "MPoppins"
                font_size: "18sp"
                pos_hint: {"center_x": .6, "center_y": .26}
                color:rgba(160,179,191, 255)

            MDRaisedButton:
                text: "Open time picker"
                pos_hint: {'center_x': .54, 'center_y': .26}
                on_release: app.show_time_picker()
                canvas.before:
                    Color:
                        rgb: rgba(52, 0, 231, 255)
                    
        Button:
            text: "SAVE DATA"
            size_hint: .66, .065
            pos_hint:{"center_x": .5,"center_y": .09}
            background_color:0, 0, 0, 0
            on_release:
                app.hello()
                app.root.transition.direction="left"
                app.root.current="mainscreen"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius:[5]             

