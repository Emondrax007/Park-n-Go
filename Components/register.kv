#:kivy 1.0
<Register>:
    name: "register"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                app.root.transition.direction="right"
                app.root.current = "login"
        MDLabel:
            text:"W e l c o m e  A d m i n !"
            font_name: "MPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": .75, "center_y": .85}
            color:rgba(0, 0, 59, 255)

        MDLabel:
            text:"Choose Field to Enter"
            font_name: "MPoppins"
            font_size: "20sp"
            pos_hint: {"center_x":.84, "center_y": .79}
            color:rgba(135, 133, 193, 255)
                

        Button:
            text: "BILLINGS"
            size_hint: .66, .065
            pos_hint:{"center_x": .5,"center_y": .55}
            background_color:0, 0, 0, 0
            on_release:
                app.root.transition.direction="left"
                app.root.current="billing"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius:[5]
        Button:
            text: "ADD RECORDS"
            size_hint: .66, .065
            pos_hint:{"center_x": .5,"center_y": .45}
            background_color:0, 0, 0, 0
            on_release:
                app.root.transition.direction="left"
                app.root.current="mainscreen"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos:self.pos
                    radius:[5]